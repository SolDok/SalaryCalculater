<Window x:Class="SalaryCalculator.NewEmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SalaryCalculator"
        mc:Ignorable="d"
        Title="Новый рабочий" MinHeight="150" MinWidth="300" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <TextBlock>Введите Имя:</TextBlock>
        <TextBox Name="f_nameBox" Grid.Row="1"></TextBox>

        <TextBlock Grid.Row="2">Введите Фамилию:</TextBlock>
        <TextBox Name="s_nameBox" Grid.Row="3"></TextBox>

        <WrapPanel Grid.Row="4" HorizontalAlignment="Right" Margin="0, 10 ,0 ,0">
            <Button Content="OK" MinWidth="60" Margin="0, 0, 10, 0" Click="Accept_Click" IsDefault="True"></Button>
            <Button Content="Cancel" MinWidth="60" IsCancel="True"></Button>
        </WrapPanel>
    </Grid>
</Window>
