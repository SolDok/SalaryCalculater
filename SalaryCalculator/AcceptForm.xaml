<Window x:Class="SalaryCalculator.AcceptForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SalaryCalculator"
        mc:Ignorable="d"
        Title="Accept" MinHeight="150" MinWidth="300" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <TextBlock Grid.ColumnSpan="2" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18">Подтвердите операцию</TextBlock>
        
        <WrapPanel Grid.ColumnSpan="2" Grid.Row="1" HorizontalAlignment="Center" Margin="0, 10, 0, 0">
            <Button Content="OK" FontSize="14" MinWidth="60" Margin="0, 0, 20 ,0" IsDefault="True" Click="AcceptClickDelete"></Button>
            <Button Content="Cancel" FontSize="14" MinWidth="60" IsCancel="True"></Button>
        </WrapPanel>
    </Grid>
</Window>
